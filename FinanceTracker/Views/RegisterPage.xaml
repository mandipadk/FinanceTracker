<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FinanceTracker.Views.RegisterPage"
             xmlns:viewmodel="clr-namespace:FinanceTracker.ViewModels"
             x:DataType="viewmodel:RegisterViewModel"
             Title="{Binding Title}">

    <ScrollView>
        <Grid RowDefinitions="Auto,*,Auto"
              Padding="20">
            
            <!-- Header -->
            <VerticalStackLayout Grid.Row="0" 
                                 Spacing="5" 
                                 Margin="0,20,0,0">
                <Label Text="Create Account"
                       Style="{StaticResource Headline}"
                       HorizontalOptions="Center" />
                <Label Text="Join Finance Tracker today"
                       Style="{StaticResource SubHeadline}"
                       HorizontalOptions="Center"
                       Margin="0,0,0,20" />
            </VerticalStackLayout>

            <!-- Registration Form -->
            <VerticalStackLayout Grid.Row="1"
                                 Spacing="15"
                                 VerticalOptions="Center">
                
                <!-- Error Message -->
                <Frame IsVisible="{Binding IsError}"
                       BackgroundColor="#FFF0F0"
                       BorderColor="#FFD0D0"
                       Padding="10"
                       Margin="0,0,0,10"
                       HasShadow="False">
                    <Label Text="{Binding ErrorMessage}"
                           TextColor="#D00000"
                           FontSize="14" />
                </Frame>
                
                <!-- First Name -->
                <VerticalStackLayout Spacing="5">
                    <Label Text="First Name"
                           FontSize="14"
                           TextColor="{AppThemeBinding Light={StaticResource Gray600}, Dark={StaticResource Gray300}}" />
                    <Frame Padding="15,0"
                           HasShadow="False"
                           BorderColor="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray600}}"
                           HeightRequest="50">
                        <Entry Placeholder="Enter your first name"
                               Text="{Binding FirstName}"
                               BackgroundColor="Transparent" />
                    </Frame>
                </VerticalStackLayout>
                
                <!-- Last Name -->
                <VerticalStackLayout Spacing="5">
                    <Label Text="Last Name"
                           FontSize="14"
                           TextColor="{AppThemeBinding Light={StaticResource Gray600}, Dark={StaticResource Gray300}}" />
                    <Frame Padding="15,0"
                           HasShadow="False"
                           BorderColor="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray600}}"
                           HeightRequest="50">
                        <Entry Placeholder="Enter your last name"
                               Text="{Binding LastName}"
                               BackgroundColor="Transparent" />
                    </Frame>
                </VerticalStackLayout>
                
                <!-- Email -->
                <VerticalStackLayout Spacing="5">
                    <Label Text="Email"
                           FontSize="14"
                           TextColor="{AppThemeBinding Light={StaticResource Gray600}, Dark={StaticResource Gray300}}" />
                    <Frame Padding="15,0"
                           HasShadow="False"
                           BorderColor="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray600}}"
                           HeightRequest="50">
                        <Entry Placeholder="Enter your email"
                               Text="{Binding Email}"
                               Keyboard="Email"
                               BackgroundColor="Transparent" />
                    </Frame>
                </VerticalStackLayout>
                
                <!-- Password -->
                <VerticalStackLayout Spacing="5">
                    <Label Text="Password"
                           FontSize="14"
                           TextColor="{AppThemeBinding Light={StaticResource Gray600}, Dark={StaticResource Gray300}}" />
                    <Frame Padding="15,0"
                           HasShadow="False"
                           BorderColor="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray600}}"
                           HeightRequest="50">
                        <Entry Placeholder="Enter your password"
                               Text="{Binding Password}"
                               IsPassword="True"
                               BackgroundColor="Transparent" />
                    </Frame>
                </VerticalStackLayout>
                
                <!-- Confirm Password -->
                <VerticalStackLayout Spacing="5">
                    <Label Text="Confirm Password"
                           FontSize="14"
                           TextColor="{AppThemeBinding Light={StaticResource Gray600}, Dark={StaticResource Gray300}}" />
                    <Frame Padding="15,0"
                           HasShadow="False"
                           BorderColor="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray600}}"
                           HeightRequest="50">
                        <Entry Placeholder="Confirm your password"
                               Text="{Binding ConfirmPassword}"
                               IsPassword="True"
                               BackgroundColor="Transparent" />
                    </Frame>
                </VerticalStackLayout>
                
                <!-- Register Button -->
                <Button Text="Register"
                        Command="{Binding RegisterCommand}"
                        Margin="0,20,0,0"
                        HeightRequest="50"
                        FontAttributes="Bold"
                        IsEnabled="{Binding IsNotBusy}" />
                
                <!-- Login Link -->
                <Label Text="Already have an account? Login"
                       HorizontalOptions="Center"
                       TextColor="{StaticResource Primary}"
                       FontSize="14"
                       Margin="0,10,0,0">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding GoToLoginCommand}" />
                    </Label.GestureRecognizers>
                </Label>
                
                <!-- Activity Indicator -->
                <ActivityIndicator IsRunning="{Binding IsBusy}"
                                   IsVisible="{Binding IsBusy}"
                                   HorizontalOptions="Center"
                                   Margin="0,20,0,0" />
            </VerticalStackLayout>
            
            <!-- Footer -->
            <Label Grid.Row="2"
                   Text="Â© 2025 Finance Tracker"
                   HorizontalOptions="Center"
                   TextColor="{AppThemeBinding Light={StaticResource Gray400}, Dark={StaticResource Gray500}}"
                   FontSize="12"
                   Margin="0,20,0,0" />
        </Grid>
    </ScrollView>
</ContentPage>
